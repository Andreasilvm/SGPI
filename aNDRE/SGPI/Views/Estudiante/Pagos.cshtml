@model SGPI.Models.TblPago
@{
    ViewData["Title"] = "EditarUsuario";
    Layout = "_LayoutSGPI";
}

<h1>Pagos</h1>

<center>
    <p>
        <nav class="navbar navbar-expand-sm bg-success navbar-light ">
            <b>
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="javascript:history.back()">ACTUALIZAR</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Estudiante/Pagos">PAGOS</a>


                </ul>
        </nav>
    <p>

</center>

<div style="text-align:right">
    <a href="/Administrador/Login" id="regresar">Cerrar sesion</a>
</div>
<br>
<form method="post">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th scope="col">No</th>
                <th scope="col">Valor Pago</th>
                <th scope="col">Fecha Pago</th>
                <th scope="col">Opciones</th>

            </tr>
        </thead>
        <tbody>

            <tr>
                <th scope="row">2</th>
                <td><input asp-for="ValorPago" type="number" placeholder=" Ingrese valor" required /></td>
                <td><input asp-for="Fecha" type="date" placeholder="DD/MM/AAAA" required /></td>
                <td><input type="file" placeholder="pago2.pdf" required /></td>
            </tr>
        </tbody>

    </table>
    <br>
    <br>
    @if (ViewBag.Pagos != null)
    {

        <h1>@ViewBag.Pagos</h1>

    }
    <br>
    <br>
    <center> <input type="submit" id="btnCrear_Usuario" value="ENVIAR CERTIFICADO" class="btn btn-success" /></center>
</form>