@model SGPI.Models.TblUsuario
@{
    ViewData["Title"] = "BuscarUsuario";
    Layout = "_LayoutSGPI";
}


<center>
    <p>
        <nav class="navbar navbar-expand-sm bg-success navbar-light ">
            <b>
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="/Administrador/CrearUsuario">CREAR USUARIO</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Administrador/BuscarUsuario">BUSCAR USUARIO</a>

                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Administrador/EliminarUsuario">ELIMINAR USUARIO</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Administrador/EditarUsuario">MODIFICAR USUARIO</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="/Administrador/Reporte">REPORTE</a>
                    </li>
                </ul>
            </b>
        </nav>
    <p>

</center>

<div style="text-align:right">
    <a href="/Administrador/login" id="regresar">Cerrar sesion</a>
</div>


<html lang="en">
<body>


    <div class="container mt-3">
        <form method="post">

            <label></label>
            <input asp-for="NumeroDocumento" class="form-control" id="myInput" type="text" placeholder="Search..">



            <br />
            <div>
                <center> <input type="submit" id="btnBuscar_Usuario" value="BUSCAR USUARIO" class="btn btn-success" /></center>
                @if (Model != null)
                {
                    <table class="table">

                        <thead>
                            <tr class="text-center">
                                <th>@Html.DisplayNameFor(modelitem=>modelitem.NumeroDocumento)</th>
                                <th>@Html.DisplayNameFor(modelitem=>modelitem.PrimerNombre)</th>
                                <th>@Html.DisplayNameFor(modelitem=>modelitem.SegundoNombre)</th>
                                <th>@Html.DisplayNameFor(modelitem=>modelitem.PrimerApellido)</th>
                                <th>@Html.DisplayNameFor(modelitem=>modelitem.SegundoApellido)</th>
                                <th>@Html.DisplayNameFor(modelitem=>modelitem.Idrol)</th>
                                <th>@Html.DisplayNameFor(modelitem=>modelitem.Idgenero)</th>
                                <th>@Html.DisplayNameFor(modelitem=>modelitem.Idprograma)</th>
                                <th>@Html.DisplayNameFor(modelitem=>modelitem.Email)</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <th>@Html.DisplayFor(modelitem=>modelitem.NumeroDocumento)</th>
                                <th>@Html.DisplayFor(modelitem=>modelitem.PrimerNombre)</th>
                                <th>@Html.DisplayFor(modelitem=>modelitem.SegundoNombre)</th>
                                <th>@Html.DisplayFor(modelitem=>modelitem.PrimerApellido)</th>
                                <th>@Html.DisplayFor(modelitem=>modelitem.SegundoApellido)</th>
                                <th>@Html.DisplayFor(modelitem=>modelitem.Idrol)</th>
                                <th>@Html.DisplayFor(modelitem=>modelitem.Idgenero)</th>
                                <th>@Html.DisplayFor(modelitem=>modelitem.Idprograma)</th>
                                <th>@Html.DisplayFor(modelitem=>modelitem.Email)</th>
                                <th>@Html.ActionLink("EditarUsuario","EditarUsuario",new {Idusuario=Model.Idusuario})</th>
                                <th> @Html.ActionLink("EliminarUsuario","EliminarUsuario", new {Idusuario=Model.Idusuario},
                                new {onclick="return confirm ('¿Estas seguro de eliminar?');"})
                                </th>
                            </tr>
                        </tbody>


                    </table>
                }
                else{
                    <label> No se encontro el usuario </label>
                }
            </div>
        </form>
    </div>


    <br>




</body>
</html>
