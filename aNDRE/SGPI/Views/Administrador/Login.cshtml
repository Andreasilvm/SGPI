@model SGPI.Models.TblUsuario

@{
    ViewData["Title"] = "Login";
    Layout = "_LayoutSGPI";
}


<form class="signup-form" method="POST">
    <div id="page" class="container col-12 col-sm-12 col-md-5 card d-none d-lg-block ">

        <div id="page-header" class="frontpage-guest-header">


            <div class="row" id="loginbox">


                <div id="boxForm">
                    <div class="card-body">
                        <h3>SISTEMA DE GESTION DE POSGRADOS</h3>


                        <label for="username">
                            Nombre de usuario
                        </label>
                        <div class="input-group">
                            <div class="input-group-addon"><i class="fa fa-envelope add-on"></i></div>
                            <input asp-for="NumeroDocumento" type="text" class="form-control" id="username" placeholder="Nombre de usuario" required />
                        </div>

                        <label for="password">Contraseña</label>
                        <div class="input-group">
                            <div class="input-group-addon"><i class="fa fa-lock add-on"></i></div>
                            <input asp-for="VcPassword" type="password" class="form-control" id="password" placeholder="Contraseña" required />
                        </div>
                        <br >
                        <div class="sign-up-btn">
                            <button type="submit" class="btn btn-primary">Ingresar</button>
                        </div>



                        <p><a href="/Administrador/OlvidarContrasena" id="recuperarPass">¿Olvidaste la contraseña?</a></p>


                        <div class="form-check mb-2 mr-sm-2">
                            <label class="form-check-label">
                                <input class="form-check-input" type="checkbox"> Recuerdame
                            </label>
                        </div>
                    </div>
                </div>
            </div> 
        </div>

    </div>
</form>

@if (ViewBag.mensaje != null)
{
    <center><h1>@ViewBag.mensaje</h1></center>
    <br />
}